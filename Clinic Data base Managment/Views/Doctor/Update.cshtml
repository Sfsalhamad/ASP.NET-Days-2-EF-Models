@model Clinic_Data_base_Managment.ViewModel.UpdateVM

@{
    ViewData["Title"] = "Update Doctor";
}

<h2>Update Doctor</h2>

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="id" />
    
    <div class="form-group">
        <label asp-for="name" class="control-label">Name</label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="specilaty" class="control-label">Specialty</label>
        <input asp-for="specilaty" class="form-control" />
        <span asp-validation-for="specilaty" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="description" class="control-label">Description</label>
        <textarea asp-for="description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="description" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}