@model DoctorVM
@{
    ViewData["Title"] = "Create Doctor";
}
<h2>Create Doctor</h2>
<form asp-controller="Doctor" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="name" class="control-label"></label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="specilaty" class="control-label"></label>
        <input asp-for="specilaty" class="form-control" />
        <span asp-validation-for="specilaty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description" class="control-label"></label>
        <input asp-for="description" class="form-control" />
        <span asp-validation-for="description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    </form>
